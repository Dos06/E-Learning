@model Elearning.Models.User

@{
    ViewBag.Title = "Login";
}
<div class="container body-content">

    <h2>Login</h2>


    <form action="/Users/Login" method="post" id="loginForm">
        @*@using (Html.BeginForm("Login", "Users", FormMethod.Post))
            {*@
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>User</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @aria_required = "true", @required = "true" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @aria_required = "true", @required = "true" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="submit" value="Login" class="btn btn-success" />*@
                    <button id="btnLogin" class="btn btn-lg btn-info">Login</button>
                </div>
            </div>
        </div>
        @*}*@
    </form>

    <div>
        @Html.ActionLink("Register", "Create")
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <script>
        $(document).ready(function () {
            $("#btnLogin").click(function () {
                var userFormData = $("#loginForm").serialize();
                $.ajax({
                    type: "POST",
                    url: "/Users/Login",
                    data: userFormData,
                    success: function () {
                        window.location.href = "/Users/Profile";
                    }
                })
            })
        })
    </script>
