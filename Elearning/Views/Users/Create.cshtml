@model Elearning.Models.User

@{
    ViewBag.Title = "Register";
}
<div class="container body-content">
    <h2>Register</h2>


    @*@using (Html.BeginForm("Create", "Users"))
        {*@

    <form action="/Users/Create" method="post" id="createForm">
        @Html.AntiForgeryToken()

